@model IEnumerable<ClientWeb.Models.mvcProduct>

@{
    ViewData["Title"] = "GetProducts";
}

<h1>Все продукты в холодильнике</h1>

<p>
    <a href="AddProduct/@ViewData["fridgeId"]">Добавить продукт</a>
</p>
@if(Model!= null && Model.Count()!=0)

{
    <form asp-action="ChangeCountProducts"> 
        <input type="hidden" name="fridgeId" value = @ViewData["fridgeId"]>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Количество
                    </th>
                
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <input type="hidden" name="productsId" value = @item.Id>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <input type="number" class="productCount" min="0" name= "productCount" value=@item.Default_quantity>
                    </td>
                    <td>
                        <div class="fridgeButtons" onclick="SendDelete(@item.Id)">Удалить</div>
                    </td>
                </tr>
        }
            </tbody>
        </table>

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
   </form>
}
else
{
    <h3>В данном холожильнике нет продуктов</h3>
}

<script>
    function SendDelete(idProduct)
    {
        if(confirm('Вы действительно хотите удалить этот продукт?'))
        {
            let ref ="DeleteFromFridge/"+@ViewData["fridgeId"]+"/"+ idProduct;
            fetch(ref, { method: 'DELETE' })
        }
    }
</script>